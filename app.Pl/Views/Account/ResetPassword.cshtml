@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Auth_Layout.cshtml";
}

<h1>ResetPassword</h1>
<div class="main-agileinfo">
<div asp-validation-summary="All" class="text-danger"></div>
	<div class="agileits-top">
		<form asp-action="ResetPassword">
			<input class="text" asp-for="NewPassword" placeholder="Please enter New Password">
			<span asp-validation-for="NewPassword" class="text-danger"></span>

			<br />
			<input class="text" asp-for="ConfirmPassword" placeholder="Please Reapet Password">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<br />
			
			<input type="submit" value="Reset">
		</form>
		
	
	</div>
</div>
